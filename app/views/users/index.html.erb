<h2>Users info</h2>
<% #TODO create links to FOLLOWS!!!!%>
<% @users.each do |user| %>
  <div id="user-container">
    <div id="user-left">Avatar:
      <% if user.image_data? %>
        <%= image_tag user.image_url(:small) %>
        <%= link_to 'Edit', edit_user_path(user) %>
      <% end %>
    </div>
    <hr>
    <div id="user-right">
      <h4>Username: <%= link_to "#{user.username}", user_path(user)  %> </h4>
      <div class="badge bg-primary text-wrap mb-5">About me: <%= user.info %></div>
      <div class="mt-3 row"><%= link_to "View all user posts", user_posts_path(user), class: 'btn btn-success' %>
    <% if current_user.present? && user == current_user %>
      <%= link_to 'Edit profile', edit_user_path(user), class: 'btn btn-warning' %>
      <%= link_to 'Delete user',
                  user_path(user),
                  method: :delete,
                  data: { confirm: 'User will be deleted! Are you sure?' }, class: 'btn btn-danger' %></span>
        <% end %>
    </div>

    <ul>Followers count: <%= user.followers.count %> </ul>
    <ul>Followings count: <%= user.followings.count %></ul>

  </div>

  </div>
  <% end %>


